{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string"
    },
    "description": {
      "type": "text"
    },
    "currentPrice": {
      "type": "decimal"
    },
    "oldPrice": {
      "type": "decimal"
    },
    "imageGalleries": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "isNew": {
      "type": "boolean",
      "default": false
    },
    "isSale": {
      "type": "boolean",
      "default": false
    },
    "rating": {
      "type": "decimal",
      "default": 0
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "products"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "normal",
        "trending",
        "bestSeller"
      ],
      "default": "normal"
    }
  }
}
